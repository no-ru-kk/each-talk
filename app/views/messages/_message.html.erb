<div class="mmessage">
  <div class="mupper-message">
    <div class="mmessage-user">
      <!-- 投稿したユーザー名情報を出力する -->
      <%= message.user.name %>

    </div>
    <div class="mmessage-date">
      <!-- 投稿した時刻を出力する -->
      <%= l message.created_at %>

    </div>
  </div>
  <div class="mlower-message">
    <div class="mmessage-content">
      <!-- 投稿したメッセージ内容を記述する -->
      <%= message.content %>
    </div>
    <%= image_tag message.image.variant(resize: '500x500'), class: 'mmessage-image' if message.image.attached? %>
  </div>
</div>