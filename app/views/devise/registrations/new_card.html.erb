<div class="items-sell-contents">
  <header class="items-sell-header">
    <%= link_to 'Each Talk', root_path, class: "ntitle" %>
  </header>

  <%= form_with  url: @card, id: 'charge-form', class: 'registration-main',local: true do |f| %>

  <div class='form-wrap'>
    <div class='form-header'>
      <h1 class='form-header-text'>
        カード情報登録
      </h1>
    </div>

    <%= render "devise/shared/error_messages", resource: @card %>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">【カード番号】</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :number, class:"input-default", placeholder:"カード番号(半角英数字)", maxlength:"16", autofocus: true %>
    </div>

    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">【ＣＶＣ】</label>
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_field :cvc, class:"input-default", placeholder:"カード背面にある3桁の番号", maxlength:"4" %>
    </div>


    <div class="form-group">
      <div class='form-text-wrap'>
        <label class="form-text">【有効期限】</label>
        <span class="indispensable">必須</span>
        <div class='input-expiration-date-wrap'>
          <%= f.select :exp_month, 1..12, {include_blank: "---"}, class: "exp_month" %>
          <p>月</p>
          <%= f.select :exp_year, 20..25, {include_blank: "---"}, class: "exp_year" %>
          <p>年</p>
        </div>
      </div>
    </div>
    <%= f.submit "登録する" , class:"regi-ora-btn" %>
    <div class="log-btn-contents">
      <%=link_to '戻る', new_user_registration_path, class:"log-btn" %>
    </div>
  </div>
  <% end %>
  <footer class="items-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">Each Talk利用規約</a></li>
    </ul>
    <p class="inc">
      ©︎Each Talk,Inc.
    </p>
  </footer>
</div>

